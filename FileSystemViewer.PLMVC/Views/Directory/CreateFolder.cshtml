@model FileSystemViewer.PLMVC.Models.Directory.DirectoryViewModel


<button type="button" class="btn btn-info" data-toggle="modal" data-target="#modDialog">Create folder</button>

<div id="modDialog" class="modal fade" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal" >x</button>
                <h4>Create new folder</h4>
            </div>
            @using (Ajax.BeginForm("CreateFolder", "Directory", FormMethod.Post, new AjaxOptions()
            {
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "modDialog",
                LoadingElementId = "loading",
                HttpMethod = "POST"
            }))
            {
                <div class="modal-body custom-modal">
                    @Html.AntiForgeryToken()
                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    @Html.HiddenFor(model => model.ParentDirectoryPath)
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    function showDialog() {
        debugger;
        $("#modDialog").modal("show");
    };

    function hideDialog() {
        debugger;
        var st = "";
        $("#modDialog").modal("hide");
    };
</script>